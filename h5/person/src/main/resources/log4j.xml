<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//LOGGER" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">


	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
		<!-- %d %-5p: [%x] %c [%F:%L] - %m%n -->
			<param name="ConversionPattern" value="%d %-5p: [%F:%L] - %m%n" />
		</layout>
	</appender>

	<!-- File Appender -->
	<appender name="generallogfile"
		class="com.person.framework.log.FundDailyRollingFileAppender">
		<!-- <param name="Threshold" value="INFO" /> -->
		<param name="File" value="/Users/wangyang/data/test/person-general.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="8MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p: [%F:%L] - %m%n" />
		</layout>
	</appender>

	<!-- File Appender -->
	<appender name="logfile"
		class="com.person.framework.log.FundDailyRollingFileAppender">
		<!-- <param name="Threshold" value="INFO" /> -->
		<param name="File" value="/Users/wangyang/data/test/person-info.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="8MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p: [%F:%L] - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
			<param name="LevelMax" value="DEBUG" />
		</filter>
	</appender>

	<appender name="errorfile"
		class="com.person.framework.log.FundDailyRollingFileAppender">
		<param name="File" value="/Users/wangyang/data/test/person-error.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="8MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p: [%F:%L] - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="WARN" />
			<param name="LevelMax" value="FATAL" />
		</filter>
	</appender>

	<appender name="perffile"
		class="com.person.framework.log.FundDailyRollingFileAppender">
		<param name="File" value="/Users/wangyang/data/test/person-perf.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="8MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p: [%F:%L] - %m%n" />
		</layout>
	</appender>

	<!-- 3rdparty Loggers -->
<!-- 	<logger name="org.springframework"> -->
<!-- 		<level value="info" /> -->
<!-- 	</logger> -->

	<logger name="druid.sql.Statement">
		<level value="debug" />
	</logger>
 	
	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="generallogfile" />
		<appender-ref ref="errorfile" />
		
	</root>

</log4j:configuration>
