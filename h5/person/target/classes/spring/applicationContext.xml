<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	<!-- 配置自动扫描包 -->
	<context:annotation-config />
	<context:component-scan base-package="com.person.**.impl"></context:component-scan>
	<!-- 使AspectJ注解起作用：自动为匹配的类生产代理对象 -->
	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>
	<import resource="applicationContext-datasource.xml" />
	<import resource="applicationContext-mybatis.xml" />
	<import resource="applicationContext-repository.xml"/>
	<import resource="applicationContext-service.xml"/>
	<import resource="applicationContext-redis.xml"/>
	<import resource="applicationContext-shiro.xml"/>
	<import resource="applicationContext-transaction.xml"/>
	
	<bean id="messageService" class="com.person.framework.service.impl.LoaclCachedMessageService" init-method="init">
		<property name="propFiles">
			<list>
				<value>message.properties</value>
<!-- 				<value>excel-export.properties</value> -->
			</list>
		</property>
	</bean>
	
	<bean id="springUtil" class="com.person.framework.utils.SpringContextUtil"></bean>
</beans>